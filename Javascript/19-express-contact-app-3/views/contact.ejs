<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h2>Daftar Kontak</h2>
      <a href="/contact/add" class='btn btn-primary mb-2'>Tambah Data</a>
      <% if(msg.length !== 0) { %>
        <div class="alert alert-success" role="alert">
          <%= msg %>
        </div>
      <% } %>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">No. HP</th>
            <!--<th scope="col">Email</th>-->
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% 
            contacts.forEach((contact, i) => { %>
            <tr>  
              <th scope="row"><%= ++i %></th>
              <td><%= contact.nama %></td>
              <td><%= contact.nohp %></td>
              <!--<td><%= contact.email %></td>-->
              <td>
                <a href="/contact/<%= contact.nama %>" class='btn btn-success badge rounded-pill'><i class="bi bi-info-circle"></i> Detail</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
